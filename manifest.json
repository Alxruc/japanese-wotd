{
    "manifest_version": 3,
    "name": "Japanese Word Of The Day",
    "description": "Gives you a random Japanese word daily",
    "version": "1.1.3",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },


    "action": {
      "default_popup": "popup.html"

    },

    "content_scripts": [
      {
        "matches": ["https://jisho.org/*"],
        "js": ["word.js"]
      }
    ],

    "browser_specific_settings": {
      "gecko": {
        "id": "{709a4737-b158-4b04-bb3a-e7d5eefad662}"
      }
    }
    
    
  }
  